@using Epam.Task11.WebPages.CS;

@{
    if (IsAjax)
    {
        int.TryParse(Request.Params["id"], out var id);

        if (id > 0 && BLLProvider.AwardLogic.Remove(id))
        {
            @("Award was removed")
        }
        else
        {
            @("Cannot to remove award with this ID")
        }
    }
}