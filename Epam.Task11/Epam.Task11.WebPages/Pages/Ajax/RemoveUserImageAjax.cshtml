@using Epam.Task11.WebPages.CS;

@{
    if (IsAjax)
    {
        int.TryParse(Request.Params["id"], out var id);

        if (id > 0 && BLLProvider.UserLogic.RemoveImage(id))
        {
            @("User image was removed")
        }
        else
        {
            @("Cannot to remove user image")
        }
    }
}