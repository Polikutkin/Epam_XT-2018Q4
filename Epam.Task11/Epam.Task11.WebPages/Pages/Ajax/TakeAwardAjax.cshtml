@using Epam.Task11.WebPages.CS;

@{
    if (IsAjax)
    {
        int.TryParse(Request.Params["user_id"], out var userId);
        int.TryParse(Request.Params["award_id"], out var awardId);

        if (userId > 0 && awardId > 0 && BLLProvider.AwardLogic.TakeAward(userId, awardId))
        {
            @("Award was taken")
        }
        else
        {
            @("Cannot to take award")
        }
    }
}